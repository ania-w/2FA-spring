<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="src_in"
    android:foregroundTint="@color/white"
    tools:context=".LoginFragment">

    <Button
        android:id="@+id/scan_fingerprint"
        android:layout_width="188dp"
        android:layout_height="78dp"
        android:backgroundTint="@color/purple_200"
        android:shadowColor="@color/purple_700"
        android:shadowDx="@dimen/material_emphasis_high_type"
        android:text="Scan fingerprint"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/OTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX XXX"
        android:textColor="@color/grey"
        android:textSize="48sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/infoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769"
        tools:visibility="visible" />

    <Button
        android:id="@+id/newConfig"
        android:layout_width="188dp"
        android:layout_height="78dp"
        android:backgroundTint="@color/purple_200"
        android:shadowColor="@color/purple_700"
        android:shadowDx="@dimen/material_emphasis_high_type"
        android:text="Add new account configuration"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543"
        tools:visibility="visible" />

    <Button
        android:id="@+id/modifyConfig2"
        android:layout_width="186dp"
        android:layout_height="74dp"
        android:backgroundTint="#E7DBFB"
        android:text="Change account configuration"
        android:textColor="#4A307A"
        android:textSize="14sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/fingerprint"
        android:layout_width="76dp"
        android:layout_height="67dp"
        android:backgroundTintMode="multiply"
        android:foregroundTint="#811F1F"
        android:src="?android:attr/fingerprintAuthDrawable"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756"
        app:tint="#46287C"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="363dp"
        android:layout_height="72dp"
        android:text="Enter the OTP in the web application or use fingerprint sensor to authenticate in the web app."
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.635"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="339dp"
        android:layout_height="17dp"
        android:progressBackgroundTint="@color/grey"
        android:progressTint="@color/purple_200"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/infoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTP"
        app:layout_constraintVertical_bias="0.285"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/newAccountText"
        android:layout_width="347dp"
        android:layout_height="75dp"
        android:text="No account available. \n Please configure new account."
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>